.about-container {
  padding: 48rpx;
  background-color: #f2f2f2;
  min-height: 100vh;
}

.about-box {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  max-width: 600rpx;
  width: 100%;
}

.about-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a63f7;
  margin-bottom: 24rpx;
}

.about-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: hsl(0, 75%, 3%);
}
